{
    "name": "notehub-e2e-tests",
    "version": "1.0.0",
    "description": "E2E tests for NoteHub using CodeceptJS with Playwright",
    "scripts": {
        "test": "codeceptjs run --steps",
        "test:headless": "codeceptjs run --steps --headless",
        "test:headed": "HEADLESS=false codeceptjs run --steps",
        "test:parallel": "codeceptjs run-workers 4",
        "test:debug": "codeceptjs run --debug",
        "test:verbose": "codeceptjs run --verbose",
        "test:single": "codeceptjs run --steps --grep",
        "test:report": "codeceptjs run --steps --reporter mochawesome",
        "dry-run": "codeceptjs dry-run"
    },
    "keywords": [
        "e2e",
        "testing",
        "codeceptjs",
        "playwright"
    ],
    "devDependencies": {
        "@codeceptjs/allure-legacy": "^1.0.2",
        "codeceptjs": "^3.6.7",
        "mochawesome": "^7.1.3",
        "playwright": "^1.58.0"
    }
}
