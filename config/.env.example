# Note Hub Environment Configuration
# Copy this file to .env and update with your actual values

# Flask Secret Key (REQUIRED)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET=change_this_to_a_random_secret_key

# Admin Credentials (REQUIRED)
NOTES_ADMIN_USERNAME=admin
NOTES_ADMIN_PASSWORD=ChangeMeNow!42

# MySQL Database Configuration (REQUIRED)
# Make sure MySQL server is running and database is created
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=notehub
MYSQL_PASSWORD=your_secure_mysql_password
MYSQL_DATABASE=notehub

# Google reCAPTCHA Configuration (OPTIONAL)
# Get keys from: https://www.google.com/recaptcha/admin
# Leave blank to disable CAPTCHA protection
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# Example with keys (replace with your actual keys):
# RECAPTCHA_SITE_KEY=6LcXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
# RECAPTCHA_SECRET_KEY=6LcYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYY
